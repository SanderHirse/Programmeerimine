#risttahukas
print "Risttahukas"
#andmed
r_a = 10
r_b = 15
r_c = 20
#servade pikkus
r_servad = 4*(r_a+r_b+r_c)
print "servad = {}"\
.format(r_servad)
#pindala
r_pindala = 2*(r_a*r_b+r_b*r_c+r_a*r_c)
print "pindala = {}"\
.format(r_pindala)
#ruumala
r_ruumala = r_a*r_b*r_c
print "ruumala = {}"\
.format(r_ruumala)
#Pyramiid
print "Pyramiid"
#andmed
p_a = 5
p_b = 5
p_h = 5
#servade pikkus
p_servad = p_a*4+p_b*4
print "servad = {}"\
.format(p_servad)
#pindala
p_pindala = (p_a*p_a)+4*(p_a*p_b/2)
